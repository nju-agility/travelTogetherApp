<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="4dp"
    android:id="@+id/card_container"
    android:foreground="?android:attr/selectableItemBackground"
    android:focusable="true">
    <android.support.constraint.ConstraintLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">
        <ImageView
            android:id="@+id/activity_pic_small"
            android:layout_width="160dp"
            android:layout_height="120dp"

            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/activity_shortinfo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/activity_shortinfo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingTop="8dp"
            android:paddingStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/activity_pic_small"
            app:layout_constraintBottom_toBottomOf="parent">
            <TextView
                android:id="@+id/activity_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="活动名称"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/activity_city_fixed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="地点:"
                android:layout_marginTop="6dp"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/activity_title"/>
            <TextView
                android:id="@+id/activity_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#000000"
                android:text="南京市"
                android:gravity="center"
                android:layout_marginStart="12dp"
                app:layout_constraintStart_toEndOf="@id/activity_city_fixed"
                app:layout_constraintTop_toTopOf="@id/activity_city_fixed"/>

            <TextView
                android:id="@+id/activity_time_fixed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="时间:"
                android:layout_marginTop="6dp"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/activity_city_fixed"/>
            <TextView
                android:id="@+id/activity_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#000000"
                android:text="2019.01.10-2019.01.12"
                android:gravity="center"
                android:layout_marginStart="12dp"
                app:layout_constraintStart_toEndOf="@id/activity_time_fixed"
                app:layout_constraintTop_toTopOf="@id/activity_time_fixed"/>
            <TextView
                android:id="@+id/activity_owner_fixed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="发起人:"
                android:layout_marginTop="6dp"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/activity_time_fixed"/>
            <TextView
                android:id="@+id/activity_owner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#000000"
                android:text="垃圾翔"
                android:gravity="center"
                android:layout_marginStart="12dp"
                app:layout_constraintStart_toEndOf="@id/activity_owner_fixed"
                app:layout_constraintTop_toTopOf="@id/activity_owner_fixed"/>
            <TextView
                android:id="@+id/activity_theme_fixed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="主题:"
                android:layout_marginTop="6dp"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/activity_owner_fixed"/>
            <TextView
                android:id="@+id/activity_theme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#000000"
                android:text="游玩"
                android:gravity="center"
                android:layout_marginStart="12dp"
                app:layout_constraintStart_toEndOf="@id/activity_theme_fixed"
                app:layout_constraintTop_toTopOf="@id/activity_theme_fixed"/>

        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>