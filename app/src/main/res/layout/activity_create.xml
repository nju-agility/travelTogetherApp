<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#ffffff">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/create_ac_img_container"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:focusable="true"
            android:layout_height="84dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="图片"
                android:layout_weight="3"
                android:textSize="14sp"
                android:textColor="#222222"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginStart="18dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
            <ImageView
                android:id="@+id/create_ac_img_arrow"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/right_arrow"
                android:scaleType="fitXY"
                android:padding="8dp"
                android:layout_marginEnd="18dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/create_ac_img"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:layout_constraintEnd_toStartOf="@id/create_ac_img_arrow"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </android.support.constraint.ConstraintLayout>

        <View
            android:id="@+id/decor_1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#aaaaaa"
            app:layout_constraintTop_toBottomOf="@id/create_ac_img_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.9"/>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/create_ac_account_container"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/decor_1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="60dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发起人"
                android:layout_weight="3"
                android:textSize="14sp"
                android:textColor="#222222"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginStart="18dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/create_ac_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账号"
                android:textSize="13sp"
                android:textColor="#444444"
                android:layout_marginEnd="58dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </android.support.constraint.ConstraintLayout>

        <View
            android:id="@+id/decor_2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#aaaaaa"
            app:layout_constraintTop_toBottomOf="@id/create_ac_account_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.9"/>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/create_city_container"
            android:layout_width="match_parent"
            android:focusable="true"
            app:layout_constraintTop_toBottomOf="@id/decor_2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="60dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="城市"
                android:layout_weight="3"
                android:textSize="14sp"
                android:textColor="#222222"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginStart="18dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
            <ImageView
                android:id="@+id/create_city_arrow"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/right_arrow"
                android:scaleType="fitXY"
                android:padding="8dp"
                android:layout_marginEnd="18dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/create_ac_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未设置"
                android:textSize="13sp"
                android:textColor="#444444"
                app:layout_constraintEnd_toStartOf="@id/create_city_arrow"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </android.support.constraint.ConstraintLayout>

        <View
            android:id="@+id/decor_3"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#aaaaaa"
            app:layout_constraintTop_toBottomOf="@id/create_city_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.9"/>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/create_location_container"
            android:layout_width="match_parent"
            android:focusable="true"
            app:layout_constraintTop_toBottomOf="@id/decor_3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="60dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地址"
                android:layout_weight="3"
                android:textSize="14sp"
                android:textColor="#222222"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginStart="18dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
            <ImageView
                android:id="@+id/create_location_arrow"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/right_arrow"
                android:scaleType="fitXY"
                android:padding="8dp"
                android:layout_marginEnd="18dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/create_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未设置"
                android:textSize="13sp"
                android:textColor="#444444"
                app:layout_constraintEnd_toStartOf="@id/create_location_arrow"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </android.support.constraint.ConstraintLayout>

        <View
            android:id="@+id/decor_4"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#aaaaaa"
            app:layout_constraintTop_toBottomOf="@id/create_location_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.9"/>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/create_title_container"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/decor_4"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="60dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="标题"
                android:layout_weight="3"
                android:textSize="14sp"
                android:textColor="#222222"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginStart="18dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
            <ImageView
                android:id="@+id/create_title_arrow"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/right_arrow"
                android:scaleType="fitXY"
                android:padding="8dp"
                android:layout_marginEnd="18dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/create_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未设置"
                android:textSize="13sp"
                android:textColor="#444444"
                app:layout_constraintEnd_toStartOf="@id/create_title_arrow"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </android.support.constraint.ConstraintLayout>

        <View
            android:id="@+id/decor_5"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#aaaaaa"
            app:layout_constraintTop_toBottomOf="@id/create_title_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.9"/>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/create_starttime_container"
            android:layout_width="match_parent"
            android:focusable="true"
            app:layout_constraintTop_toBottomOf="@id/decor_5"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="60dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开始时间"
                android:layout_weight="3"
                android:textSize="14sp"
                android:textColor="#222222"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginStart="18dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
            <ImageView
                android:id="@+id/create_starttime_arrow"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/right_arrow"
                android:scaleType="fitXY"
                android:padding="8dp"
                android:layout_marginEnd="18dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/create_starttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未设置"
                android:textSize="13sp"
                android:textColor="#444444"
                app:layout_constraintEnd_toStartOf="@id/create_starttime_arrow"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </android.support.constraint.ConstraintLayout>

        <View
            android:id="@+id/decor_6"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#aaaaaa"
            app:layout_constraintTop_toBottomOf="@id/create_starttime_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.9"/>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/create_stoptime_container"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/decor_6"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="60dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="结束时间"
                android:layout_weight="3"
                android:textSize="14sp"
                android:textColor="#222222"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginStart="18dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
            <ImageView
                android:id="@+id/create_stoptime_arrow"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/right_arrow"
                android:scaleType="fitXY"
                android:padding="8dp"
                android:layout_marginEnd="18dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/create_user_stoptime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未设置"
                android:textSize="13sp"
                android:textColor="#444444"
                app:layout_constraintEnd_toStartOf="@id/create_stoptime_arrow"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </android.support.constraint.ConstraintLayout>

        <View
            android:id="@+id/decor_7"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#aaaaaa"
            app:layout_constraintTop_toBottomOf="@id/create_stoptime_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.9"/>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/create_detail_container"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/decor_7"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="60dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="详情"
                android:layout_weight="3"
                android:textSize="14sp"
                android:textColor="#222222"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginStart="18dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
            <ImageView
                android:id="@+id/create_user_detail_arrow"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/right_arrow"
                android:scaleType="fitXY"
                android:padding="8dp"
                android:layout_marginEnd="18dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/create_user_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未设置"
                android:textSize="13sp"
                android:textColor="#444444"
                app:layout_constraintEnd_toStartOf="@id/create_user_detail_arrow"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </android.support.constraint.ConstraintLayout>

        <View
            android:id="@+id/decor_8"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#aaaaaa"
            app:layout_constraintTop_toBottomOf="@id/create_detail_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.9"/>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/create_cost_container"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/decor_8"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="60dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预估消费"
                android:layout_weight="3"
                android:textSize="14sp"
                android:textColor="#222222"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginStart="18dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
            <ImageView
                android:id="@+id/create_user_cost_arrow"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/right_arrow"
                android:scaleType="fitXY"
                android:padding="8dp"
                android:layout_marginEnd="18dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/create_user_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未设置"
                android:textSize="13sp"
                android:textColor="#444444"
                android:layout_marginEnd="58dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </android.support.constraint.ConstraintLayout>

        <View
            android:id="@+id/decor_9"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#aaaaaa"
            app:layout_constraintTop_toBottomOf="@id/create_cost_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.9"/>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/create_type_container"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/decor_9"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="60dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="旅行主题"
                android:layout_weight="3"
                android:textSize="14sp"
                android:textColor="#222222"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginStart="18dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
            <ImageView
                android:id="@+id/create_type_arrow"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/right_arrow"
                android:scaleType="fitXY"
                android:padding="8dp"
                android:layout_marginEnd="18dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/create_user_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未设置"
                android:textSize="13sp"
                android:textColor="#444444"
                android:layout_marginEnd="58dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </android.support.constraint.ConstraintLayout>

        <View
            android:id="@+id/decor_10"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#aaaaaa"
            app:layout_constraintTop_toBottomOf="@id/create_type_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.9"/>
        <Button
            android:id="@+id/create_ac_btn"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:text="确 定"
            android:background="@drawable/ripple_submit_btn_style"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/decor_10"
            android:layout_margin="4dp"
            />



    </android.support.constraint.ConstraintLayout>
</ScrollView>