<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.github.ksoichiro.android.observablescrollview.ObservableScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/artical_detail_listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/submit_bar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/artical_detail_img"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/artical_detail_title"/>
            <TextView
                android:id="@+id/artical_detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="活动标题"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:gravity="center_vertical"
                app:layout_constraintTop_toBottomOf="@id/artical_detail_img"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/artical_detail_time_fixed"
                android:layout_height="wrap_content"
                android:layout_width="70dp"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="16sp"
                android:text="时间："
                app:layout_constraintStart_toStartOf="@id/artical_detail_title"
                app:layout_constraintTop_toBottomOf="@id/artical_detail_title"/>
            <TextView
                android:id="@+id/artical_detail_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:textColor="#000000"
                android:text="2019.01.10"
                app:layout_constraintStart_toEndOf="@id/artical_detail_time_fixed"
                app:layout_constraintTop_toBottomOf="@id/artical_detail_title"/>
            <TextView
                android:id="@+id/artical_detail_city_fixed"
                android:layout_width="70dp"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="16sp"
                android:text="地点："
                app:layout_constraintStart_toStartOf="@id/artical_detail_time_fixed"
                app:layout_constraintTop_toBottomOf="@id/artical_detail_time"/>
            <TextView
                android:id="@+id/artical_detail_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:textColor="#000000"
                android:text="南京"
                app:layout_constraintStart_toEndOf="@id/artical_detail_city_fixed"
                app:layout_constraintTop_toBottomOf="@id/artical_detail_time"/>
            <TextView
                android:id="@+id/artical_detail_owner_fixed"
                android:layout_width="70dp"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="16sp"
                android:text="发起人："
                app:layout_constraintStart_toStartOf="@id/artical_detail_city_fixed"
                app:layout_constraintTop_toBottomOf="@id/artical_detail_city_fixed"/>
            <TextView
                android:id="@+id/artical_detail_owner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:textColor="#000000"
                android:text="阿翔"
                app:layout_constraintStart_toEndOf="@id/artical_detail_owner_fixed"
                app:layout_constraintTop_toBottomOf="@id/artical_detail_city"/>
            <TextView
                android:id="@+id/artical_detail_introduction_fixed"
                android:layout_width="70dp"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="16sp"
                android:text="简介："
                app:layout_constraintStart_toStartOf="@id/artical_detail_owner_fixed"
                app:layout_constraintTop_toBottomOf="@id/artical_detail_owner_fixed"/>
            <TextView
                android:id="@+id/artical_detail_introduction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="12sp"
                android:textColor="#000000"
                android:text="游玩"
                app:layout_constraintStart_toEndOf="@id/artical_detail_introduction_fixed"
                app:layout_constraintTop_toBottomOf="@id/artical_detail_introduction_fixed"/>
        </android.support.constraint.ConstraintLayout>
    </com.github.ksoichiro.android.observablescrollview.ObservableScrollView>


</android.support.constraint.ConstraintLayout>